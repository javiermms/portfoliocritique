{
    "name": "Review - portfolio feedback tool",
    "version": "0.9",
    "author": "Javier Mendoza",
    "description": "Link your portfolio and get feedback from your peers!",
    "manifest_version": 2,
    "icons": {"128": "review.png"},
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content.js"]
        }   
    ],
    "browser_action": {
        "default_popup": "popup.html",
        "default_title": "Review",
        "default_icon": "review.png"
    }
}